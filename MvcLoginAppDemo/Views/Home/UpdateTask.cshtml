@model ToDoTasks.Models.UIToDoTask

@{
    ViewBag.Title = "UpdateTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateTask</h2>


@using (Html.BeginForm("SaveEditedTask", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit ToDo Task</legend>

        @Html.HiddenFor(model => model.TaskUserId)
        @Html.HiddenFor(model => model.ToDoTaskId)

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskDescription)
            @Html.ValidationMessageFor(model => model.TaskDescription)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LastUpdated)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.LastUpdated, new { @readonly = "readonly", data_val = "false" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CheckedDone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CheckedDone)
            @Html.ValidationMessageFor(model => model.CheckedDone)
        </div>

        <p>
            <input type="submit" value="SaveEditedTask" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "UserDashBoard")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
